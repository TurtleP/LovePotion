{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "Build 3DS",
            "type": "shell",
            "command": "make ctr -j6",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },

            "group": "build",
            "problemMatcher": []
        },

        {
            "label": "Clean All",
            "type": "shell",
            "command": "make clean",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },

            "group": "build",
            "problemMatcher": []
        },

        {
            "label": "Build Switch",
            "type": "shell",
            "command": "make hac -j6",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },

            "group": "build",
            "problemMatcher": []
        },

        {
            "label": "Build Switch {Debug}",
            "type": "shell",
            "command": "make hac-debug -j6",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },

            "group": "build",
            "problemMatcher": []
        },

        {
            "label": "Build All",
            "type": "shell",
            "command": "make -j6",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },

            "group": "build",
            "problemMatcher": []
        },

        {
            "label": "Install 3DS",
            "dependsOn": [
                "Build 3DS"
            ],
            "type": "shell",
            "command": "3dslink ./platform/3ds/LovePotion.3dsx",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "none"
        },

        {
            "label": "Install Switch",
            "dependsOn": [
                "Build Switch"
            ],
            "type": "shell",
            "command": "nxlink ./platform/switch/LovePotion.nro",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "none"
        }
    ]
}
